definition
	PERSON[at0000] matches {    -- Person
		details matches {
			allow_archetype ITEM_TREE[at0001] matches {    -- Demographic details
				include
					archetype_id/value matches {/openEHR-DEMOGRAPHIC-ITEM_TREE\.person_details[a-zA-Z0-9_-]*\.v0/}
			}
			allow_archetype ITEM_STRUCTURE[at0041] occurrences matches {0..*} matches {    -- Person Details
				include
					archetype_id/value matches {/.*/}
			}
		}
		identities cardinality matches {1..*; unordered} matches {
			allow_archetype PARTY_IDENTITY[at0002] matches {    -- Name
				include
					archetype_id/value matches {/openEHR-DEMOGRAPHIC-PARTY_IDENTITY\.person_name[a-zA-Z0-9_-]*\.v0/}
			}
		}
		contacts cardinality matches {1..*; unordered} matches {
			CONTACT[at0003] matches {    -- Contacts
				addresses cardinality matches {1..*; unordered} matches {
					allow_archetype ADDRESS[at0030] matches {    -- Addresses
						include
							archetype_id/value matches {/.*/}
					}
					ADDRESS[at0042] occurrences matches {0..*} matches {    -- Primary Contacts
						details matches {
							ITEM_TREE[at0043] matches {    -- Item tree
								items cardinality matches {0..*; unordered} matches {
									ELEMENT[at0044] occurrences matches {0..3} matches {    -- Mobile Phone
										value matches {
											DV_IDENTIFIER matches {*}
										}
									}
									ELEMENT[at0046] occurrences matches {0..3} matches {    -- Email Address
										value matches {
											DV_IDENTIFIER matches {*}
										}
									}
								}
							}
						}
					}
				}
			}
		}
		relationships cardinality matches {1..*; unordered} matches {
			PARTY_RELATIONSHIP[at0004] matches {    -- Relationships
				details matches {
					ITEM_TREE[at0005] matches {    -- ITEM_TREE
						items cardinality matches {0..*; unordered} matches {
							ELEMENT[at0040] matches {    -- Relationship type
								value matches {
									DV_TEXT matches {*}
									DV_CODED_TEXT matches {*}
								}
							}
						}
					}
				}
			}
		}
	}

